<script is:inline>
const sketch = (p) => {
  let strokes = [];
  let time = 0;

  class InkStroke {
    constructor() {
      this.points = [];
      this.startX = p.random(p.width);
      this.startY = p.random(p.height);
      this.angle = p.random(p.TWO_PI);
      this.length = p.random(100, 400);
      this.thickness = p.random(1, 4);
      this.speed = p.random(0.5, 2);
      this.noiseOffset = p.random(1000);
      this.color = p.random([
        [196, 90, 59],   // terracotta
        [139, 115, 85],  // warm brown
        [75, 65, 55],    // dark brown
      ]);
      this.alpha = p.random(15, 40);
      this.progress = 0;
      this.generating = true;
      this.currentX = this.startX;
      this.currentY = this.startY;
    }

    update() {
      if (!this.generating) return;

      for (let i = 0; i < 3; i++) {
        if (this.progress >= this.length) {
          this.generating = false;
          return;
        }

        const noiseVal = p.noise(this.noiseOffset + this.progress * 0.01);
        this.angle += p.map(noiseVal, 0, 1, -0.15, 0.15);

        this.currentX += p.cos(this.angle) * this.speed;
        this.currentY += p.sin(this.angle) * this.speed;

        this.points.push({
          x: this.currentX,
          y: this.currentY,
          thickness: this.thickness * (1 + p.sin(this.progress * 0.05) * 0.3)
        });

        this.progress++;
      }
    }

    draw() {
      if (this.points.length < 2) return;

      p.noFill();
      p.stroke(this.color[0], this.color[1], this.color[2], this.alpha);

      for (let i = 1; i < this.points.length; i++) {
        const pt = this.points[i];
        const prev = this.points[i - 1];
        p.strokeWeight(pt.thickness);
        p.line(prev.x, prev.y, pt.x, pt.y);
      }
    }
  }

  p.setup = () => {
    p.createCanvas(p.windowWidth, p.windowHeight).parent('canvas-container');
    // Initial strokes
    for (let i = 0; i < 15; i++) {
      strokes.push(new InkStroke());
    }
  };

  p.draw = () => {
    p.clear();
    time++;

    // Occasionally add new strokes
    if (time % 120 === 0 && strokes.length < 40) {
      strokes.push(new InkStroke());
    }

    // Remove old completed strokes occasionally
    if (time % 300 === 0 && strokes.length > 20) {
      strokes = strokes.filter(s => s.generating || p.random() > 0.3);
    }

    for (let stroke of strokes) {
      stroke.update();
      stroke.draw();
    }
  };

  p.windowResized = () => p.resizeCanvas(p.windowWidth, p.windowHeight);
};
new p5(sketch);
</script>
