      { vertices: 7, size: 30, speed: -0.009, orbit: 35 },
      { vertices: 4, size: 20, speed: 0.018, orbit: 50 },
    ];
    const mechCount = isMobile ? 3 : 7;
    for (let i = 0; i < mechCount; i++) {
      mechShapes.push(new MechShape(
        p.random(80, p.width - 80),
        p.random(80, p.height - 80),
        mechConfigs[i]
      ));
    }
  };

  p.draw = () => {
    p.clear();
    time++;

    // Draw mechanical shapes (background layer)
    for (let shape of mechShapes) {
      shape.update();
      shape.draw();
    }

    // Draw organic shapes (foreground layer)
    for (let shape of organicShapes) {
      shape.update();
      shape.draw();
    }

    // Connections between organic shapes
    p.stroke(92, 124, 90, 12);
    p.strokeWeight(1);
    for (let i = 0; i < organicShapes.length; i++) {
      for (let j = i + 1; j < organicShapes.length; j++) {
        const d = p.dist(organicShapes[i].x, organicShapes[i].y, organicShapes[j].x, organicShapes[j].y);
        if (d < 400) {
          p.line(organicShapes[i].x, organicShapes[i].y, organicShapes[j].x, organicShapes[j].y);
        }
      }
    }
  };

  p.windowResized = () => p.resizeCanvas(p.windowWidth, p.windowHeight);
};

new p5(sketch);
</script>

<script is:inline>
// Contact form toggle
const contactForm = document.getElementById('contact-form');
const navLinks = document.getElementById('nav-links');
const cancelBtn = document.getElementById('form-cancel');
const textarea = contactForm.querySelector('textarea');
const charCount = contactForm.querySelector('.char-count');

function openForm() {
  navLinks.classList.add('hidden');
  contactForm.classList.add('active');
  contactForm.querySelector('input').focus();
}

function closeForm() {
  contactForm.classList.remove('active');
  navLinks.classList.remove('hidden');
  contactForm.reset();
  charCount.textContent = '300';
}

// All triggers that open the form
document.querySelectorAll('#email-toggle, .email-trigger').forEach(el => {
  el.addEventListener('click', (e) => {
    e.preventDefault();
    openForm();
  });
});

cancelBtn.addEventListener('click', closeForm);

// Keyboard shortcuts
document.addEventListener('keydown', (e) => {
  // Don't trigger if typing in an input
  if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') {
    if (e.key === 'Escape') closeForm();
    if (e.key === 'Enter' && e.shiftKey) {
      e.preventDefault();
      contactForm.requestSubmit();
    }
    return;
  }

  if (e.key === 'e' || e.key === 'E') {
    e.preventDefault();
    openForm();
  }

  if (e.key === 'l' || e.key === 'L') {
    window.open('https://www.linkedin.com/in/morris-clay/', '_blank');
  }

  if (e.key === 'Escape') {
    closeForm();
  }
});

textarea.addEventListener('input', () => {
  const typed = textarea.value.length;
  const remaining = 300 - typed;
  let msg = remaining;

  if (typed === 0) msg = '300';
  else if (typed <= 20) msg = `${remaining} — just getting started`;
  else if (typed <= 60) msg = `${remaining} — warming up`;
  else if (typed <= 120) msg = `${remaining} — finding your rhythm`;
  else if (typed <= 200) msg = `${remaining} — nice and focused`;
  else if (typed <= 270) msg = `${remaining} — beautifully concise`;
  else msg = `${remaining} — every word counts`;

  charCount.textContent = msg;
  charCount.style.color = remaining < 30 ? 'var(--accent-deep)' : 'var(--faded)';
});
</script>

