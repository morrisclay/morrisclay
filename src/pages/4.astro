<script is:inline>
const sketch = (p) => {
  let gridOffset = 0;
  let stars = [];
  let sun;

  p.setup = () => {
    p.createCanvas(p.windowWidth, p.windowHeight).parent('canvas-container');

    // Create stars
    for (let i = 0; i < 100; i++) {
      stars.push({
        x: p.random(p.width),
        y: p.random(p.height * 0.5),
        size: p.random(0.5, 2),
        twinkle: p.random(1000)
      });
    }

    sun = { y: p.height * 0.45, radius: 120 };
  };

  p.draw = () => {
    // Gradient sky
    for (let y = 0; y < p.height; y++) {
      const inter = p.map(y, 0, p.height, 0, 1);
      const c = p.lerpColor(p.color(13, 2, 33), p.color(50, 10, 80), inter);
      p.stroke(c);
      p.line(0, y, p.width, y);
    }

    // Stars
    for (let star of stars) {
      const twinkle = p.sin(p.frameCount * 0.05 + star.twinkle) * 0.5 + 0.5;
      p.noStroke();
      p.fill(255, 255, 255, twinkle * 150);
      p.ellipse(star.x, star.y, star.size);
    }

    // Sun with gradient and lines
    const sunY = sun.y + p.sin(p.frameCount * 0.01) * 5;
    for (let r = sun.radius; r > 0; r -= 3) {
      const alpha = p.map(r, 0, sun.radius, 255, 50);
      p.noStroke();
      p.fill(255, 100, 200, alpha * 0.3);
      p.ellipse(p.width / 2, sunY, r * 2);
    }

    // Sun horizontal lines
    p.stroke(13, 2, 33);
    p.strokeWeight(3);
    for (let i = 0; i < 8; i++) {
      const lineY = sunY + 20 + i * 12;
      if (lineY < sunY + sun.radius) {
        const halfWidth = p.sqrt(sun.radius * sun.radius - p.pow(lineY - sunY, 2));
        p.line(p.width / 2 - halfWidth, lineY, p.width / 2 + halfWidth, lineY);
      }
    }

    // Horizon line
    const horizonY = p.height * 0.6;
    p.stroke(255, 0, 255, 100);
    p.strokeWeight(2);
    p.line(0, horizonY, p.width, horizonY);

    // Perspective grid
    const gridSpacing = 40;
    const gridDepth = 20;
    gridOffset = (gridOffset + 0.5) % gridSpacing;

    // Horizontal lines
    for (let i = 0; i < gridDepth; i++) {
      const y = horizonY + (i + gridOffset / gridSpacing) * 25;
      const alpha = p.map(i, 0, gridDepth, 150, 20);
      p.stroke(0, 255, 255, alpha);
      p.strokeWeight(p.map(i, 0, gridDepth, 0.5, 2));
      p.line(0, y, p.width, y);
    }

    // Vertical perspective lines
    const vanishX = p.width / 2;
    for (let i = -15; i <= 15; i++) {
      const bottomX = vanishX + i * 80;
      const alpha = p.map(p.abs(i), 0, 15, 150, 30);
      p.stroke(255, 0, 255, alpha);
      p.strokeWeight(1);
      p.line(vanishX, horizonY, bottomX, p.height);
    }

    // Glow overlay at horizon
    p.noStroke();
    for (let i = 0; i < 20; i++) {
      p.fill(255, 0, 255, 3);
      p.rect(0, horizonY - i * 2, p.width, 4);
    }
  };

  p.windowResized = () => p.resizeCanvas(p.windowWidth, p.windowHeight);
};
new p5(sketch);
</script>
