<div class="label">001 / Glitch Grid</div>

<script is:inline>
const sketch = (p) => {
  let cols, rows;
  const cellSize = 40;
  let grid = [];
  let glitchFrames = 0;

  p.setup = () => {
    p.createCanvas(p.windowWidth, p.windowHeight).parent('canvas-container');
    cols = Math.ceil(p.width / cellSize) + 1;
    rows = Math.ceil(p.height / cellSize) + 1;
    for (let i = 0; i < cols * rows; i++) {
      grid.push({
        offset: p.random(1000),
        speed: p.random(0.01, 0.03),
        char: p.random(['/', '\\', '|', '-', '+', '·', '○', '□', '△']),
        glitch: false
      });
    }
  };

  p.draw = () => {
    p.background(10);

    // Random glitch trigger
    if (p.random() < 0.02) glitchFrames = p.floor(p.random(5, 20));

    const isGlitching = glitchFrames > 0;
    if (isGlitching) glitchFrames--;

    for (let y = 0; y < rows; y++) {
      for (let x = 0; x < cols; x++) {
        const i = x + y * cols;
        const cell = grid[i];
        const px = x * cellSize;
        const py = y * cellSize;

        const noiseVal = p.noise(x * 0.1, y * 0.1, p.frameCount * cell.speed);

        // Glitch offset
        let offsetX = 0, offsetY = 0;
        if (isGlitching && p.random() < 0.1) {
          offsetX = p.random(-20, 20);
          offsetY = p.random(-5, 5);
        }

        if (noiseVal > 0.5) {
          const alpha = p.map(noiseVal, 0.5, 1, 20, 80);

          // Cyan channel offset during glitch
          if (isGlitching && p.random() < 0.3) {
            p.fill(0, 255, 255, alpha * 0.5);
            p.noStroke();
            p.textSize(14);
            p.textAlign(p.CENTER, p.CENTER);
            p.text(cell.char, px + offsetX + 2, py + offsetY);
          }

          p.fill(255, alpha);
          p.noStroke();
          p.textSize(14);
          p.textFont('Space Mono');
          p.textAlign(p.CENTER, p.CENTER);
          p.text(cell.char, px + offsetX, py + offsetY);
        }

        // Occasional scan line
        if (isGlitching && y === p.floor(p.frameCount * 0.5) % rows) {
          p.stroke(0, 255, 255, 30);
          p.strokeWeight(cellSize);
          p.line(0, py, p.width, py);
        }
      }
    }

    // Horizontal glitch bars
    if (isGlitching) {
      for (let i = 0; i < 3; i++) {
        const y = p.random(p.height);
        const h = p.random(2, 8);
        p.noStroke();
        p.fill(0, 255, 255, p.random(20, 50));
        p.rect(0, y, p.width, h);
      }
    }
  };

  p.windowResized = () => {
    p.resizeCanvas(p.windowWidth, p.windowHeight);
    cols = Math.ceil(p.width / cellSize) + 1;
    rows = Math.ceil(p.height / cellSize) + 1;
  };
};
new p5(sketch);
</script>
