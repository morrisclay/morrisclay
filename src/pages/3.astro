<script is:inline>
const sketch = (p) => {
  let particles = [];
  let time = 0;

  class Particle {
    constructor() {
      this.reset();
    }

    reset() {
      // Start from edges
      const side = p.floor(p.random(4));
      if (side === 0) { this.x = p.random(p.width); this.y = -10; }
      else if (side === 1) { this.x = p.width + 10; this.y = p.random(p.height); }
      else if (side === 2) { this.x = p.random(p.width); this.y = p.height + 10; }
      else { this.x = -10; this.y = p.random(p.height); }

      this.targetX = p.width / 2 + p.random(-100, 100);
      this.targetY = p.height / 2 + p.random(-100, 100);
      this.size = p.random(1, 3);
      this.speed = p.random(0.002, 0.008);
      this.progress = 0;
      this.startX = this.x;
      this.startY = this.y;
      this.curve = p.random(-50, 50);
      this.alpha = p.random(20, 60);
      this.trail = [];
    }

    update() {
      this.progress += this.speed;

      if (this.progress >= 1) {
        this.reset();
        return;
      }

      // Bezier-like curve
      const t = this.progress;
      const mt = 1 - t;
      const controlX = (this.startX + this.targetX) / 2 + this.curve;
      const controlY = (this.startY + this.targetY) / 2 + this.curve;

      this.x = mt * mt * this.startX + 2 * mt * t * controlX + t * t * this.targetX;
      this.y = mt * mt * this.startY + 2 * mt * t * controlY + t * t * this.targetY;

      this.trail.push({ x: this.x, y: this.y, alpha: this.alpha * (1 - t) });
      if (this.trail.length > 30) this.trail.shift();
    }

    draw() {
      // Trail
      for (let i = 0; i < this.trail.length - 1; i++) {
        const pt = this.trail[i];
        const alpha = p.map(i, 0, this.trail.length, 0, pt.alpha * 0.5);
        p.stroke(200, 0, 0, alpha);
        p.strokeWeight(0.5);
        p.point(pt.x, pt.y);
      }

      // Particle
      p.noStroke();
      p.fill(200, 0, 0, this.alpha);
      p.ellipse(this.x, this.y, this.size);
    }
  }

  p.setup = () => {
    p.createCanvas(p.windowWidth, p.windowHeight).parent('canvas-container');
    for (let i = 0; i < 50; i++) {
      const particle = new Particle();
      particle.progress = p.random(); // Stagger
      particles.push(particle);
    }
  };

  p.draw = () => {
    p.clear();
    time++;

    // Center circle guide (very subtle)
    p.noFill();
    p.stroke(240);
    p.strokeWeight(0.5);
    p.ellipse(p.width / 2, p.height / 2, 300);

    for (let particle of particles) {
      particle.update();
      particle.draw();
    }
  };

  p.windowResized = () => p.resizeCanvas(p.windowWidth, p.windowHeight);
};
new p5(sketch);
</script>
