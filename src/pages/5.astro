<script is:inline>
const sketch = (p) => {
  let stars = [];
  let attractors = [];
  let particles = [];
  let time = 0;

  class Star {
    constructor() {
      this.x = p.random(p.width);
      this.y = p.random(p.height);
      this.size = p.random(0.5, 2.5);
      this.brightness = p.random(50, 200);
      this.twinkleSpeed = p.random(0.02, 0.08);
      this.twinkleOffset = p.random(p.TWO_PI);
    }

    draw() {
      const twinkle = p.sin(time * this.twinkleSpeed + this.twinkleOffset) * 0.3 + 0.7;
      const alpha = this.brightness * twinkle;

      // Warm star color
      p.noStroke();
      p.fill(255, 250, 240, alpha);
      p.ellipse(this.x, this.y, this.size);

      // Subtle glow for brighter stars
      if (this.size > 1.8) {
        p.fill(212, 175, 55, alpha * 0.1);
        p.ellipse(this.x, this.y, this.size * 4);
      }
    }
  }

  class Attractor {
    constructor(x, y) {
      this.x = x;
      this.y = y;
      this.mass = p.random(1000, 3000);
      this.angle = p.random(p.TWO_PI);
      this.orbitRadius = p.random(50, 150);
      this.orbitSpeed = p.random(0.001, 0.003);
      this.centerX = x;
      this.centerY = y;
    }

    update() {
      this.angle += this.orbitSpeed;
      this.x = this.centerX + p.cos(this.angle) * this.orbitRadius * 0.3;
      this.y = this.centerY + p.sin(this.angle) * this.orbitRadius * 0.3;
    }

    draw() {
      // Gravitational lensing effect - concentric rings
      for (let r = 80; r > 0; r -= 8) {
        const alpha = p.map(r, 0, 80, 15, 2);
        p.noFill();
        p.stroke(212, 175, 55, alpha);
        p.strokeWeight(0.5);
        p.ellipse(this.x, this.y, r * 2);
      }

      // Core
      p.noStroke();
      p.fill(212, 175, 55, 30);
      p.ellipse(this.x, this.y, 8);
      p.fill(255, 250, 240, 80);
      p.ellipse(this.x, this.y, 3);
    }
  }

  class Particle {
    constructor() {
      this.reset();
    }

    reset() {
      // Start from edges
      const side = p.floor(p.random(4));
      if (side === 0) { this.x = p.random(p.width); this.y = -10; }
      else if (side === 1) { this.x = p.width + 10; this.y = p.random(p.height); }
      else if (side === 2) { this.x = p.random(p.width); this.y = p.height + 10; }
      else { this.x = -10; this.y = p.random(p.height); }

      this.vx = p.random(-0.5, 0.5);
      this.vy = p.random(-0.5, 0.5);
      this.trail = [];
      this.life = 0;
      this.maxLife = p.random(200, 400);
    }

    update() {
      // Gravitational attraction
      for (let a of attractors) {
        const dx = a.x - this.x;
        const dy = a.y - this.y;
        const dist = p.max(50, p.sqrt(dx * dx + dy * dy));
        const force = a.mass / (dist * dist);
        this.vx += (dx / dist) * force * 0.0001;
        this.vy += (dy / dist) * force * 0.0001;
      }

      // Limit velocity
      const speed = p.sqrt(this.vx * this.vx + this.vy * this.vy);
      if (speed > 3) {
        this.vx = (this.vx / speed) * 3;
        this.vy = (this.vy / speed) * 3;
      }

      this.x += this.vx;
      this.y += this.vy;

      this.trail.push({ x: this.x, y: this.y });
      if (this.trail.length > 40) this.trail.shift();

      this.life++;
      if (this.life > this.maxLife || this.x < -50 || this.x > p.width + 50 || this.y < -50 || this.y > p.height + 50) {
        this.reset();
      }
    }

    draw() {
      if (this.trail.length < 2) return;

      // Draw trail
      for (let i = 1; i < this.trail.length; i++) {
        const alpha = p.map(i, 0, this.trail.length, 0, 40);
        p.stroke(212, 175, 55, alpha);
        p.strokeWeight(0.5);
        p.line(this.trail[i-1].x, this.trail[i-1].y, this.trail[i].x, this.trail[i].y);
      }

      // Particle head
      p.noStroke();
      p.fill(255, 250, 240, 100);
      p.ellipse(this.x, this.y, 2);
    }
  }

  p.setup = () => {
    p.createCanvas(p.windowWidth, p.windowHeight).parent('canvas-container');

    // Create stars
    for (let i = 0; i < 200; i++) {
      stars.push(new Star());
    }

    // Create attractors (gravitational wells)
    for (let i = 0; i < 3; i++) {
      attractors.push(new Attractor(
        p.random(p.width * 0.2, p.width * 0.8),
        p.random(p.height * 0.2, p.height * 0.8)
      ));
    }

    // Create particles
    for (let i = 0; i < 60; i++) {
      const particle = new Particle();
      particle.life = p.random(particle.maxLife); // Stagger
      particles.push(particle);
    }
  };

  p.draw = () => {
    // Deep space background
    p.background(10, 14, 26);
    time++;

    // Draw stars
    for (let star of stars) {
      star.draw();
    }

    // Update and draw attractors
    for (let a of attractors) {
      a.update();
      a.draw();
    }

    // Update and draw particles
    for (let particle of particles) {
      particle.update();
      particle.draw();
    }

    // Subtle vignette
    const gradient = p.drawingContext.createRadialGradient(
      p.width/2, p.height/2, 0,
      p.width/2, p.height/2, p.max(p.width, p.height) * 0.7
    );
    gradient.addColorStop(0, 'rgba(10,14,26,0)');
    gradient.addColorStop(1, 'rgba(10,14,26,0.7)');
    p.drawingContext.fillStyle = gradient;
    p.drawingContext.fillRect(0, 0, p.width, p.height);
  };

  p.windowResized = () => p.resizeCanvas(p.windowWidth, p.windowHeight);
};
new p5(sketch);
</script>
